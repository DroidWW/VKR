<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage">
    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="40" 
                                 VerticalOptions="Center" 
                                 Spacing="15">

                <Image Source="droid_fix_logo.png" 
                     WidthRequest="150"/>

                <Label Text="Вход" 
                       FontSize="Large" 
                       FontAttributes="Bold" 
                       TextColor="Black" />

                <Label Text="Логин" 
                       FontSize="Medium" 
                       HorizontalOptions="Start" 
                       TextColor="#92D36E"/>

                <Entry x:Name="loginName" 
                       Placeholder="Логин" 
                       PlaceholderColor="Gray"/>

                <Label Text="Пароль" 
                       FontSize="Medium" 
                       HorizontalOptions="Start" 
                       TextColor="#92D36E"/>

                <Entry x:Name="passwordName" 
                       Placeholder="• • • • • • •" 
                       IsPassword="True"/>

                <Button Text="Вход" 
                        x:Name="ButtonForLogin"
                        Clicked="ButtonClick" 
                        HeightRequest="50" 
                        WidthRequest="300" 
                        FontSize="18" 
                        BackgroundColor="#92D36E" 
                        TextColor="White" 
                        HorizontalOptions="Center"/>

                <Label Text="Другой способ входа" 
                       FontSize="Small" 
                       HorizontalOptions="Center" 
                       TextColor="Gray"/>

                <HorizontalStackLayout HorizontalOptions="Center">
                    <Image Source="vk_logo.png" 
                           WidthRequest="100"/>
                    <Image Source="gos_yslygi_logo.png" 
                           WidthRequest="100"/>
                </HorizontalStackLayout>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="90" />
                    </Grid.ColumnDefinitions>

                    <Label HorizontalOptions="End" 
                           Text="Еще нет аккаунта?" 
                           TextColor="Gray" 
                           Grid.Column="0" 
                        Grid.Row="0"/>

                    <Label Text=" Регистрация" 
                           TextColor="#92D36E" 
                           HorizontalOptions="Start" 
                           Grid.Column="1" 
                           Grid.Row="0">

                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Registration"/>
                        </Label.GestureRecognizers>
                    </Label>
                </Grid>

                <Label Text="Забыли пароль"
                       TextColor="#92D36E" 
                       HorizontalOptions="Center">

                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ForgotPassword"/>
                    </Label.GestureRecognizers>
                </Label>

            </VerticalStackLayout>
        </ScrollView>
        
        <BoxView x:Name="overlay"
                 Color="Black"
                 Opacity="0.5"
                 IsVisible="False"
                 ZIndex="99"/>
        <ActivityIndicator x:Name="activityIndicator" 
                           Color="#92D36E" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" 
                           IsVisible="False" 
                           IsRunning="False"
                           ZIndex="100"/>
    </Grid>
</ContentPage>
    
